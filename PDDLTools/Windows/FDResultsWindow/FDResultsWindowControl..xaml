<UserControl x:Class="PDDLTools.FDResultsWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Name="FDResultsWindow">
    <UserControl.Resources>
        <ResourceDictionary Source="../ResourceDictionary/Styles.xaml"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Fast Downward Run Results" Foreground="White" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Height="40">
            <Label x:Name="WasSolutionFoundLabel" Content="Loading..." Foreground="White" VerticalAlignment="Center"/>
        </StackPanel>
        
    </Grid>
</UserControl>
